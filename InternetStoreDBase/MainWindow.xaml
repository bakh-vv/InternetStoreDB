<Window x:Class="InternetStoreDBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="База данных магазина" Height="459.315" Width="622.368">
    <Grid Margin="0,0,2,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="236*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Margin="40,41,0,0" VerticalAlignment="Top" Height="182" Width="530" Grid.ColumnSpan="5"/>
        <Button x:Name="btnOrders" Content="Посмотреть заказы" HorizontalAlignment="Left" Margin="40,312,0,0" VerticalAlignment="Top" Width="143" Height="42" Click="btnOrders_Click" Grid.ColumnSpan="2"/>
