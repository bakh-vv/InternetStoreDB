        <Label Content="Альбомы в наличии:" Grid.Column="1" HorizontalAlignment="Left" Margin="186,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="134"/>
        <Button x:Name="btnOutOfStock" Grid.ColumnSpan="3" Content="Заканчивающиеся" HorizontalAlignment="Left" Margin="177,312,0,0" VerticalAlignment="Top" Width="144" Height="42" Grid.Column="1" Click="btnOutOfStock_Click"/>
        <Button x:Name="btnStats" Content="Статистика" HorizontalAlignment="Left" Margin="123,312,0,0" VerticalAlignment="Top" Width="144" Height="42" Grid.Column="3" Grid.ColumnSpan="2" Click="btnStats_Click"/>
        <Label Content="Бейсенов Бахтияр 273" Grid.Column="1" HorizontalAlignment="Left" Margin="177,381,0,0" VerticalAlignment="Top" Width="144" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
